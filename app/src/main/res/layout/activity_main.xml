<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationHelper">

    <EditText
        android:id="@+id/edit_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Point"
        app:layout_constraintBottom_toTopOf="@+id/edit_end"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/edit_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End Point"
        app:layout_constraintBottom_toTopOf="@+id/btn_channel1"
        app:layout_constraintTop_toBottomOf="@+id/edit_start"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/edit_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="-50dp"
        android:hint="Time"
        app:layout_constraintBottom_toTopOf="@+id/btn_channel1"
        app:layout_constraintTop_toBottomOf="@+id/edit_end"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/edit_station"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:hint="Station"
        app:layout_constraintBottom_toTopOf="@+id/btn_channel1"
        app:layout_constraintTop_toBottomOf="@+id/edit_time"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_channel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="151dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="150dp"
        android:text="알림 띄우기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_station" />
</androidx.constraintlayout.widget.ConstraintLayout>